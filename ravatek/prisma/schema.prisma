generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String
  summary   String
  content   String
  language  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, language], name: "slug_language")
}
